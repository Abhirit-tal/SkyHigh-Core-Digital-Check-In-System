            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/flights/{{flight_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "flights", "{{flight_id}}"]
            }
          }
        },
        {
          "name": "Get Seat Map",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains seat map', function () {",
                  "    pm.expect(jsonData).to.have.property('seatsByClass');",
                  "});",
                  "",
                  "// Save first available seat ID",
                  "if (jsonData.seatsByClass) {",
                  "    var classes = Object.keys(jsonData.seatsByClass);",
                  "    for (var i = 0; i < classes.length; i++) {",
                  "        var seats = jsonData.seatsByClass[classes[i]];",
                  "        for (var j = 0; j < seats.length; j++) {",
                  "            if (seats[j].available) {",
                  "                pm.collectionVariables.set('seat_id', seats[j].id);",
                  "                break;",
                  "            }",
                  "        }",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/flights/{{flight_id}}/seats",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "flights", "{{flight_id}}", "seats"]
            }
          }
        }
      ]
    },
